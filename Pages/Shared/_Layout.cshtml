<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuickToolbox</title>

    <!-- Apply stored theme preference before styles load -->
    <script>
        (function () {
            try {
                var stored = localStorage.getItem('qt-theme');
                if (stored === 'light' || stored === 'dark') {
                    document.documentElement.setAttribute('data-theme', stored);
                }
            } catch (e) {
                // Ignore if localStorage not available
            }
        })();
    </script>

    <!-- Bootstrap CSS from CDN -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />

    <!-- Your styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuickToolbox.styles.css" asp-append-version="true" />

    <!-- Tool-specific styles -->
    <link rel="stylesheet" href="~/css/league.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/team-randomiser.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/timezone-meeting.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/typography-scale-generator.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme-preview.css" asp-append-version="true" />

    <link rel="canonical" href="https://quicktoolkit.co.uk@Context.Request.Path" />

    <link rel="icon" href="/images/favicon-light.svg" type="image/svg+xml" media="(prefers-color-scheme: light)">
    <link rel="icon" href="/images/favicon-dark.svg" type="image/svg+xml" media="(prefers-color-scheme: dark)">



    <meta name="description"
          content="@(ViewData["Description"] ?? "QuickToolkit – fast, simple design, finance, and productivity tools.")" />
    <meta name="theme-color" content="#0F1A2A">

    @{
        var pageTitle = ViewData["Title"] as string ?? "QuickToolkit – Online Tools";
        var pageDesc = ViewData["Description"] as string ?? "Fast, clean online tools for design, finance and productivity.";
    }

    <title>@pageTitle</title>

    <meta property="og:title" content="@pageTitle" />
    <meta property="og:description" content="@pageDesc" />
    <meta name="twitter:title" content="@pageTitle" />
    <meta name="twitter:description" content="@pageDesc" />


    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="QuickToolkit – Online Tools" />
    <meta name="twitter:description" content="Fast, clean online tools for design, finance and productivity." />
    <meta name="twitter:image" content="https://quicktoolkit.co.uk/og-image.png">

    <meta name="google-site-verification" content="fIGIbRhsBSFbvEmMNE3w9E2jeILsKloyqwsQaaWomPQ" />

    <!-- GA config (loaded by cookies.js only after consent) -->
    <script>
        // GA4 ID for QuickToolkit – cookies.js will read this
        window.QT_GA_ID = 'G-QWR3SSW14F';
    </script>

    @await RenderSectionAsync("HeadMeta", required: false)
</head>
<body>
    <header class="site-header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm app-navbar mb-3">
            <div class="container">
                <a class="navbar-brand" href="/Index">
                    <svg width="40" height="40" viewBox="0 0 200 200" fill="none">
                        <circle cx="100" cy="100" r="70" stroke="#0A1A33" stroke-width="10" />
                        <path d="M135 135 L160 160" stroke="#0A1A33" stroke-width="14" stroke-linecap="round" />
                        <path d="M115 85 L135 60" stroke="#0A1A33" stroke-width="10" stroke-linecap="round" />
                    </svg>
                </a>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/CookiePolicy">Cookies</a>
                        </li>
                    </ul>

                    <button type="button" id="theme-toggle" class="theme-toggle" aria-label="Toggle dark mode">
                        🌙
                    </button>
                </div>
            </div>
        </nav>
    </header>

    <div id="cookie-banner" class="cookie-banner hidden">
        <div class="cookie-text">
            We use cookies for analytics and advertising. You can accept or reject non-essential cookies.
            <a href="/CookiePolicy" class="cookie-learnmore">Learn more</a>
        </div>

        <div class="cookie-buttons">
            <button id="cookie-accept">Accept</button>
            <button id="cookie-reject">Reject</button>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer">
        <p>
            © @DateTime.Now.Year QuickToolbox
            · <a href="/Privacy">Privacy Policy</a>
            · <a href="/CookiePolicy">Cookie Policy</a>
            · <a href="#" onclick="localStorage.removeItem('qt-cookie-consent'); location.reload();">
                Change cookie settings
            </a>
        </p>
    </footer>

    <!-- jQuery + Bootstrap JS from CDNs -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <!-- Other libraries -->
    <script src="https://cdn.jsdelivr.net/npm/luxon@3/build/global/luxon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Your scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/chart-helper.js"></script>
    <script src="~/js/cookies.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
