@page
@model QuickToolbox.Pages.Tools.TextFormatterModel

@{
    ViewData["Title"] = "Text Formatter – QuickToolkit";
    ViewData["Description"] =
        "Format, clean and transform text instantly. Fix spacing, line breaks, casing and more with this simple text formatting tool.";
}

@section HeadMeta {
    <script type="application/ld+json">
        {
          "@@context": "https://schema.org/",
          "@@type": "SoftwareApplication",
          "name": "Text Formatter",
          "applicationCategory": "Utility",
          "operatingSystem": "Web",
          "description": "Format, clean and transform text instantly. Fix spacing, line breaks, casing and more with this simple text formatting tool.",
          "url": "https://quicktoolkit.co.uk/tools/textformatter/"
        }
    </script>
}


<section class="tool-page">
    <header class="tool-header">
        <h2>Text Cleaner &amp; Formatter</h2>
        <p>Clean up copied text by removing extra spaces and blank lines, and normalising formatting.</p>
    </header>

    <div class="tool-layout responsive-stack">
        <div class="tool-section tool-input">
            <h3 class="tool-section-title">Input</h3>
            <div class="form-row">
                <label class="form-label" for="tf-input">Input text</label>
                <textarea class="form-input form-input-multiline" id="tf-input" rows="10" placeholder="Paste your text here..."></textarea>
            </div>
        </div>

        <div class="tool-section tool-output">
            <h3 class="tool-section-title">Output</h3>
            <div class="form-row">
                <label class="form-label" for="tf-output">Output text</label>
                <textarea class="form-input form-input-multiline" id="tf-output" rows="10" placeholder="Formatted text will appear here..."></textarea>
            </div>
        </div>
    </div>

    <section class="tool-section tool-controls">
        <h3 class="tool-section-title">Options</h3>

        <div class="tf-options">
            <label class="checkbox-row">
                <input type="checkbox" id="tf-trim-lines" checked />
                <span>Trim spaces at the start and end of each line</span>
            </label>
            <label class="checkbox-row">
                <input type="checkbox" id="tf-collapse-spaces" checked />
                <span>Collapse multiple spaces into one</span>
            </label>
            <label class="checkbox-row">
                <input type="checkbox" id="tf-remove-empty-lines" checked />
                <span>Remove empty lines</span>
            </label>
            <label class="checkbox-row">
                <input type="checkbox" id="tf-single-line" />
                <span>Convert all line breaks to a single line</span>
            </label>
            <label class="checkbox-row">
                <input type="checkbox" id="tf-fix-punctuation" />
                <span>Fix spacing around punctuation (e.g. "Hello , world !" → "Hello, world!")</span>
            </label>
        </div>

        <div class="tf-buttons">
            <button type="button" id="tf-clean">Clean text</button>
            <button type="button" id="tf-copy">Copy output</button>
        </div>
    </section>

    <p class="tool-note">
        All formatting happens in your browser – your text is not uploaded anywhere.
    </p>
</section>

@section Scripts {
    <script src="~/js/text-formatter.js"></script>
}
