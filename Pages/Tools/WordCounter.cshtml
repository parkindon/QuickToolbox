@page
@model QuickToolbox.Pages.Tools.WordCounterModel

@{
    ViewData["Title"] = "Word Counter – QuickToolkit";
    ViewData["Description"] =
        "Count words, characters and sentences instantly. Ideal for writing, editing, SEO and content creation work.";
}

@section HeadMeta {
    <script type="application/ld+json">
        {
          "@@context": "https://schema.org/",
          "@@type": "SoftwareApplication",
          "name": "Word Counter",
          "applicationCategory": "Utility",
          "operatingSystem": "Web",
          "description": "Count words, characters and sentences instantly. Ideal for writing, editing, SEO and content creation work.",
          "url": "https://quicktoolkit.co.uk/tools/wordcounter/"
        }
    </script>
}


<section class="tool-page">
    <header class="tool-header">
        <h2>Word &amp; Character Counter</h2>
        <p>Type or paste your text below to see live word and character counts.</p>
    </header>

    <div class="tool-layout responsive-stack">
        <div class="tool-section tool-input">
            <h3 class="tool-section-title">Text</h3>
            <div class="form-row">
                <label class="form-label" for="wc-input">Input text</label>
                <textarea class="form-input form-input-multiline" id="wc-input" rows="10" placeholder="Start typing here..."></textarea>
            </div>
        </div>

        <div class="tool-section tool-results">
            <h3 class="tool-section-title">Counts</h3>
            <ul class="tool-result-list">
                <li>Words: <strong id="wc-words">0</strong></li>
                <li>Characters (with spaces): <strong id="wc-chars-with">0</strong></li>
                <li>Characters (no spaces): <strong id="wc-chars-no">0</strong></li>
                <li>Lines: <strong id="wc-lines">0</strong></li>
            </ul>
        </div>
    </div>

    <p class="tool-note">
        This runs entirely in your browser. Your text is not sent anywhere.
    </p>
</section>

@section Scripts {
    <script src="~/js/word-counter.js"></script>
}
