@page
@model QuickToolbox.Pages.Tools.SavingsCalculatorModel

@{
    ViewData["Title"] = "Savings Calculator – QuickToolkit";
    ViewData["Description"] =
        "Work out savings growth over time, including interest and monthly contributions. Ideal for budgeting and financial planning.";
}

@section HeadMeta {
    <script type="application/ld+json">
        {
          "@@context": "https://schema.org/",
          "@@type": "Calculator",
          "name": "Savings Calculator",
          "description": "Work out savings growth over time, including interest and monthly contributions. Ideal for budgeting and financial planning.",
          "url": "https://quicktoolkit.co.uk/tools/savingscalculator/"
        }
    </script>
}


<section class="tool-page">
    <header class="tool-header">
        <h2>Savings Goal Calculator</h2>
        <p>
            Estimate how long it could take to reach a savings goal with regular contributions and interest.
        </p>
    </header>

    <div class="tool-layout responsive-stack">
        <div class="tool-section tool-input">
            <h3 class="tool-section-title">Inputs</h3>

            <div class="form-row">
                <label class="form-label" for="sv-start">Current balance</label>
                <input class="form-input" id="sv-start" type="number" min="0" step="100" value="0" />
            </div>

            <div class="form-row">
                <label class="form-label" for="sv-goal">Savings goal</label>
                <input class="form-input" id="sv-goal" type="number" min="0" step="100" value="10000" />
            </div>

            <div class="form-row">
                <label class="form-label" for="sv-monthly">Monthly contribution</label>
                <input class="form-input" id="sv-monthly" type="number" min="0" step="10" value="200" />
            </div>

            <div class="form-row">
                <label class="form-label" for="sv-rate">Annual interest rate (%)</label>
                <input class="form-input" id="sv-rate" type="number" min="0" step="0.1" value="3" />
            </div>

            <div class="form-row">
                <label class="form-label" for="sv-max-years">Maximum years to simulate</label>
                <input class="form-input" id="sv-max-years" type="number" min="1" max="100" step="1" value="50" />
            </div>

            <div class="form-row form-action">
                <button type="button" id="sv-calc-btn">Calculate</button>
            </div>
        </div>

        <div class="tool-section tool-results">
            <h3 class="tool-section-title">Results</h3>
            <ul class="tool-result-list">
                <li>Time to reach goal: <strong id="sv-time">–</strong></li>
                <li>Total contributions: <strong id="sv-total-contrib">–</strong></li>
                <li>Total interest earned: <strong id="sv-total-interest">–</strong></li>
                <li>Final balance: <strong id="sv-final-balance">–</strong></li>
            </ul>

            <section class="tool-section savings-chart">
                <h3 class="tool-section-title">Balance over time</h3>
                <div class="tool-chart-wrapper">
                    <canvas id="savings-balance-chart"></canvas>
                </div>
            </section>

            <p class="tool-note">
                This is a simple projection. Real returns may vary and this does not include fees or tax.
            </p>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/savings-calculator.js"></script>
}
